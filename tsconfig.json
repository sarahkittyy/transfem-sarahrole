{
	"compilerOptions": {
		"allowJs": true,
		"noImplicitAny": true,
		"target": "es5",
		"suppressImplicitAnyIndexErrors": true,
		"downlevelIteration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"moduleResolution": "node"
	},
	"exclude": ["gulpfile.js"],
	"include": ["src/**/*.ts", "src/**/*"],
	"files": ["src/index.ts"]
}